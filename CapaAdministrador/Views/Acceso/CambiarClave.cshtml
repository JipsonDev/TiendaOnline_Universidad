
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CambiarClave</title>
    <link href="~/Content/sb-admin-2.css" rel="stylesheet" />
</head>
<body>
        <div class="container">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Cambiar Contraseña</h1>
                                </div>
                                <form class="user" action="@Url.Action("CambiarClave","Acceso")" method="post">
                                    <input type="hidden" value="@TempData["IdUsuario"]" name="idusuario" />
                                    <div class="form-group row">
                                        <div class="col-sm-12 mb-3 mb-sm-0">
                                            <input type="password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Contraseña Actual" name="claveactual" value="@ViewData["vclave"]">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-12 mb-3 mb-sm-0">
                                            <input type="password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Nueva Contraseña" name="nuevaclave">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-12 mb-3 mb-sm-0">
                                            <input type="password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Confirma la contraseña" name="confirmarclave">
                                        </div>
                                    </div>

                                    @{
                                        if (ViewBag.Error != null)
                                        {

                                            <div class="form-group row">
                                                <div class="alert alert-danger" role="alert">
                                                     @ViewBag.Error
                                                </div>
                                            </div>
                                        }
                                    }

                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Cambiar Contraseña
                                    </button>
                                    <hr>
                                    <div class="text-center py-3">
                                        <div class="small">
                                            <a href="@Url.Action("Index","Acceso")">
                                                Volver
                                            </a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Bootstrap core JavaScript-->
        <script src="~/Scripts/bootstrap.bundle.js"></script>

    </body>
</html>
